{
  "$schema": "https://raw.githubusercontent.com/dotnet/docfx/main/schemas/docfx.schema.json",
  "metadata": [
    {
      "src": [
        {
          "src": "src/DynamicQueryBuilder",
          "files": ["DynamicQueryBuilder.csproj"]
        }
      ],
      "output": "docs/api"
    }
  ],
  "build": {
    "content": [
      {
        "files": ["**/*.{md,yml}"]
      }
    ],
    "resource": [
      {
        "files": ["images/**"]
      }
    ],
    "output": "_site",
    "template": ["default", "modern"],
    "globalMetadata": {
      "_appName": "",
      "_appTitle": "",
      "_enableSearch": true,
      "pdf": true
    }
  }
}
